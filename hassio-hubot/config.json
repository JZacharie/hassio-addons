{
  "name": "Hassio Hubot",
  "version": "0.1",
  "slug": "hassio_hubot",
  "description": "Packaged Hubot and hubot-homeassistant for Hassio",
  "url": "https://github.com/MrRaph/hassio-addons/tree/master/hassio-hubot",
  "startup": "services",
  "boot": "auto",
  "options": {
    "uuid": "",
    "hubot_slack_token": "",
    "hubot_home_assistant_host": "",
    "hubot_home_assistant_api_password": "",
    "hubot_home_assistant_monitor_events": "Yes",
    "hubot_home_assistant_monitor_all_entities": "Yes",
    "hubot_home_assistant_events_destination": "#home-assistant"
  },
  "schema": {
    "uuid": "match(^(?:[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[34][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12})?$)?",
    "hubot_slack_token": "str",
    "hubot_home_assistant_host": "str",
    "hubot_home_assistant_api_password": "str",
    "hubot_home_assistant_monitor_events": "str",
    "hubot_home_assistant_monitor_all_entities": "str",
    "hubot_home_assistant_events_destination": "str"
  },
  "image": "mrraph/{arch}-hassio-addon-hubot"
}
